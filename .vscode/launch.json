{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch DtlApi (Debug)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/dtlapi/bin/Debug/net9.0/DtlApi.dll",
            "args": [],
            "cwd": "${workspaceFolder}/dtlapi",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/swagger"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://localhost:7148;http://localhost:5148"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            "logging": {
                "moduleLoad": false
            }
        },
        {
            "name": "Attach to DtlApi",
            "type": "coreclr",
            "request": "attach",
            "processName": "DtlApi.exe"
        },
        {
            "name": "Attach to DtlApi (Pick Process)",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}
